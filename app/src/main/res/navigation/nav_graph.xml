<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registration_screen">

    <fragment
        android:id="@+id/registration_screen"
        android:name="com.anastasia.onboarding_app.ui.screens.registration.RegistrationScreen"
        tools:layout="@layout/fragment_registration_screen">
        <action
            android:id="@+id/open_otp_screen"
            app:destination="@id/otp_screen"
            app:enterAnim="@anim/nav_slide_in_right"
            app:exitAnim="@anim/nav_slide_out_left"
            app:popEnterAnim="@anim/nav_slide_in_left"
            app:popExitAnim="@anim/nav_slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/otp_screen"
        android:name="com.anastasia.onboarding_app.ui.screens.otp.OtpScreen"
        tools:layout="@layout/fragment_otp_screen">
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/open_otp_result_dialog"
            app:destination="@id/otp_result_dialog" />
    </fragment>

    <dialog
        android:id="@+id/otp_result_dialog"
        android:name="com.anastasia.onboarding_app.ui.screens.otp_result.OtpResultDialog"
        tools:layout="@layout/fragment_otp_result_dialog">
        <argument
            android:name="result"
            app:argType="boolean" />
    </dialog>
</navigation>