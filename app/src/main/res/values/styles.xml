<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="OtpBoxStyle">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/background_otp_box_selector</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Text Styles -->

    <style name="TextAppearance.SfPro" parent="" />

    <style name="TextAppearance.SfPro.Medium" parent="TextAppearance.SfPro">
        <item name="android:fontFamily">@font/sf_pro_medium</item>
    </style>

    <style name="TextAppearance.SfPro.Medium.AppBar" parent="TextAppearance.SfPro">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Buttons Styles -->

    <style name="Widget.Button.Default" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/background_button_round_default</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.SfPro.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.BottomSheet" parent="Widget.Button.Default">
        <item name="android:background">@drawable/background_button_round_bottom_sheet</item>
    </style>

    <!-- Edit text -->

    <style name="Widget.EditText.InputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/edit_text_register_background</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.SfPro.Medium</item>
    </style>
</resources>