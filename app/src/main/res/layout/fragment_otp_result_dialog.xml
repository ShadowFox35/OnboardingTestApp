<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    tools:context=".ui.screens.otp_result.OtpResultDialog">

    <com.cunoraz.gifview.library.GifView
        android:id="@+id/result_gift"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/text_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="32dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.SfPro.Medium.AppBar"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/button_done"
        tools:text="Success" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_done"
        style="@style/Widget.Button.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="44dp"
        android:text="@string/otp_bottom_sheet_result_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>